@model PhoneMax_1._1.Models.Registration

@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/LoginStylesheet.css">
    <title>LoginSignupPage</title>
</head>
<body>
    <br>
    <br>
    <div class="cont">  
        
        <form>
            <div id="signin" class="form sign-in">
                <h2>Welcome</h2>

                <label>
                    <span>Email</span>
                    <input type="email" class="form-control" asp-for="LoginEmail" />
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" class="form-control" asp-for="LoginPassword" />
                </label>
                <p class="forgot-pass">Forgot password?</p>

                <button type="submit" asp-action="Login" class="submit login">Sign In</button>


            </div>
          
        </form>
            


        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">

                    <h3>Don't have an account? Please Sign up!</h3>
                </div>
                <div class="img__text m--in">

                    <h3>If you already has an account, just sign in.</h3>
                </div>
                <div class="img__btn">
                    <span class="m--up">Sign Up</span>
                    <span class="m--in">Sign In</span>
                </div>
            </div>
            <div class="form sign-up">
                <h2>Create your Account</h2>

                <form method="post">
                    <div class="form-group">
                        <label>
                            <span>Name</span>
                            <input type="text" class="form-control" asp-for="Name" />
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            <span>Email</span>
                            <input type="email" class="form-control" asp-for="Email" />
                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            <span>Password</span>
                            <input type="password" class="form-control" asp-for="Password" />
                        </label>
                    </div>

                    <input type="submit" asp-action="LoginSignupPage" value="SignUp" class="submit img__btn">
                    <script>

                        //if (result == "Success") {
                        //    alert("signup sucessfull")
                        //}
                        //else {
                        //    alert("enter valid details")
                        //}

                    </script>
                    @*<h1>@Registration.Name</h1>*@
                </form>
            </div>
        </div>
    </div>

    <script>
        var result = @ViewBag.Result
            console.log(result);
        if (result == 1) {
            alert("Signup sucessfull");
        }


        document.querySelector('.img__btn').addEventListener('click', function() {
            document.querySelector('.cont').classList.toggle('s--signup');
        });
        //var res;
        //console.log(Registration);

        
    </script>
    <script>
       var query = @ViewBag.Query
             console.log(query);
         if (query!= 1) {
             alert("Please enter valid email and password");
         }
         else {
             alert("login sucessfull redirecting to home page");
         }
    </script>
</body>
</html>