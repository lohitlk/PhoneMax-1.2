@model PhoneMax_1._1.Models.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductDisplay</title>
</head>
<body>

    <h3>Products List</h3>
    <table border="1" cellpadding="2" cellspacing="2">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
        @foreach (var product in ViewBag.products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td><img src="https://m.media-amazon.com/images/I/71MmJNwZcML._SL1500_.jpg" width="60" /></td>
                <td>@product.Price</td>
       
                <td>@product.Offers</td>
            </tr>
        }
    </table>
</body>
</html>
